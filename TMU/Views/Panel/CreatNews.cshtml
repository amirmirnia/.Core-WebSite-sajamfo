@model Data.TMU.Model.News.News
@using Core.TMU.Convertor
@inject Core.TMU.Service.ITMUService.IUser user
@{
    ViewData["Title"] = "ایجاد خبر جدید";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<main role="main" class="main-content">
    <div class="container-fluid">
        <div class="justify-content-center">
            <form asp-action="CreatNews" method="post">
                <div class="col-12 col-xl-10">
                    <div class="row align-items-center my-4">
                        <div class="col">
                            <h2 class="h3 mb-0 page-title">ثبت خبر جدید</h2>
                        </div>
                    </div>

                    <input asp-for="author" type="hidden" value="@user.Getname(User.Identity.Name)">
                    <input type="hidden" asp-for="DetaNews" value="@DateTime.Now">
                    <input type="hidden" asp-for="CountView" value="0">
                    <hr class="my-4">
                    <h5 class="mb-2 mt-4">اطلاعات</h5>
                    <p class="mb-4">اطلاعات خواسته شده را تکمیل نمایید.</p>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstname">عنوان خبر</label>
                            <input asp-for="TitelNews" type="text" id="firstname" class="form-control">
                            <span asp-validation-for="TitelNews"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="firstname">تیتر خبر</label>
                            <input asp-for="SubjectNews" type="text" id="firstname" class="form-control">
                            <span asp-validation-for="SubjectNews"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="firstname">هایلایت خبر</label>
                            <input asp-for="Mark" type="text" id="firstname" class="form-control">
                            <span asp-validation-for="Mark"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastname">کلمات کلیدی را با - انتخاب کنید</label>
                            <input asp-for="Tags" type="text" id="lastname" class="form-control">
                            <span asp-validation-for="Tags"></span>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="card shadow">
                                <div class="card-body">
                                    <h5 class="card-title">ویرایشگر</h5>
                                    <p>متن مورد نیاز خود را در ویرایشگر زیر وارد کنید</p>
                                    <!-- Create the editor container -->

                                    <textarea asp-for="DescriptionNews" id="editor" class="form-control" rows="10"></textarea>
                                    <span asp-validation-for="DescriptionNews"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="form-row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>

                </div> <!-- .col-12 -->
            </form>
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
</main>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>

<script>
    $(function () {
        $("#gridCheck1").click(function () {
            if ($(this).is(":checked")) {
                $("#div").show();
            } else {
                $("#div").hide();
            }
        });
    });

     $("#inputState").change(function () {
    $("#inputState2").empty();
    $.getJSON("/Home/GetSelect2/" + $("#inputState :selected").val(),
    function (data) {

    $.each(data,
    function () {
    $("#inputState2").append('<option value=' + this.value + '>' + this.text + '</option>');

    });

    });
    });

</script>
