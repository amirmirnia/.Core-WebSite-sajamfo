@model Data.TMU.Model.Slider.SliderViewModel
@using Core.TMU.Convertor
@{
    ViewData["Title"] = "ایجاد اسلایدر ";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<main role="main" class="main-content">
    <div class="container-fluid">
        <div class="justify-content-center">
            <form asp-action="CreatSlider" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="slider.FileName" value="DefaultSlider.png" />
                <div class="col-12 col-xl-10">
                    <div class="row align-items-center my-4">
                        <div class="col">
                            <h2 class="h3 mb-0 page-title">ایجاد اسلایدر </h2>
                        </div>
                    </div>
                    <hr class="my-4">
                    <h5 class="mb-2 mt-4">اطلاعات</h5>
                    <p class="mb-4">اطلاعات خواسته شده را تکمیل نمایید.</p>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstname">عنوان اسلایدر</label>
                            <input asp-for="slider.NameSlider" type="text" id="firstname" class="form-control">
                            <span asp-validation-for="slider.NameSlider"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastname">لینک مورد نظر</label>
                            <input asp-for="slider.Link" type="text" id="lastname" class="form-control">
                            <span asp-validation-for="slider.Link"></span>
                        </div>
                    </div>

                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <p class="mb-3"><strong>تنظیمات اسلایدر</strong></p>
                            <div class="custom-control custom-switch">
                                <input type="checkbox" asp-for="slider.ShowTitel" value="true" class="custom-control-input" id="customSwitch1">
                                <label class="custom-control-label" for="customSwitch1">متن نمایش داده نشود</label>
                            </div>
                            <div class="custom-control custom-switch">
                                <input type="checkbox" asp-for="slider.IsActive" value="true" class="custom-control-input" id="customSwitch2">
                                <label class="custom-control-label" for="customSwitch2">غیر فعال باشد</label>
                            </div>
                        </div> <!-- /.card-body -->
                    </div>
                    <hr class="my-4">

                    <div class="card-body">
                        <div class="form-group mb-3">
                            <div class="form-group mb-3">
                                <label for="customFile">فایل عکس بنر را انتخاب کنید</label>
                                <div class="custom-file">
                                    <input asp-for="fileimage" type="file"   class="form-control-file" id="customFile">
                                    <span asp-validation-for="slider.FileName"></span>
                                    <label class="custom-file-label"  for="customFile">انتخاب فایل</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 text-center mb-5">
                            <div class="avatar avatar-xl">
                                <img src="~/Img/More/" alt=""  id="img">
                            </div>
                        </div>
                    </div> <!-- /.card-body -->
                    <hr class="my-4">
                    <div class="form-row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>

                </div> <!-- .col-12 -->
            </form>
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
</main>
<script src="~/js/jquery-1.9.1.min.js"></script>
<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#img').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#customFile").change(function () {
        readURL(this);
    });


</script>
