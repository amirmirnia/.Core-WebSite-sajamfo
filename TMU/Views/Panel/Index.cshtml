        $(".progresdivcar .progress-bar").each(function(){
                   var bar = $(this).find(".bar");
                   var val = $(this).find("span");
                   var per = parseInt( val.text(), 10);

                   $({p:0}).animate({p:per}, {
                     duration: 3000,
                     easing: "swing",
