                                        </div>
                                        </div>
                                        </div>
                                        <div id="div1" class="form-group col-md-4" style="display: none">
                                        <label for="inputState">مجموعه</label>
                                        <select id="inputState2" name="ParentId2" class="form-control">
                                        </select>

                                        </div>
                                        </div>*@
                                </div>
                                <div class="form-group mb-2">
                                    <button type="submit" class="btn btn-primary">ثبت</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- .col-12 -->
            </div> <!-- .row -->
        </div> <!-- .container-fluid -->
    </div>
</main>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
<script>
    $(function () {
        $("#gridCheck1").click(function () {
            if ($(this).is(":checked")) {
                $("#div").show();
            } else {
                $("#div").hide();
            }
        });
    });

    $(function () {
        $("#gridCheck2").click(function () {
            if ($(this).is(":checked")) {
                $("#div1").show();
            } else {
                $("#div1").hide();
            }
        });
    });

     $("#inputState").change(function () {
    $("#inputState2").empty();
    $.getJSON("/Panel/GetSelect2/" + $("#inputState :selected").val(),
    function (data) {

    $.each(data,
    function () {
    $("#inputState2").append('<option value=' + this.value + '>' + this.text + '</option>');

    });

    });
    });
</script>
