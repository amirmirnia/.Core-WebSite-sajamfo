        <div class="row justify-content-center">
            <div class="col-8">
                <h2 class="page-title">Form Layout</h2>
                <p class="text-muted">Demo for form control styles, layout options, and custom components for creating a wide variety of forms.</p>
                <div class="card-deck">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <strong class="card-title">Basic form</strong>
                        </div>
                        <div class="card-body">
                            <form asp-action="UpdateMenu" method="post">
                                <input type="hidden" value="@ViewBag.id" asp-for="Id" />
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-3 col-form-label">نام جستجو</label>
                                    <div class="col-sm-9">
                                        <input asp-for="NameMenu" type="text" class="form-control" id="inputEmail3" placeholder="نام">
                                        <span asp-validation-for="NameMenu"></span>
                                    </div>

                                    @*<div class="col-sm-3"></div>
                                        <div class="col-sm-9">
                                        <div class="form-check">
                                        @{
                                        if (menu.IsParent(ViewBag.id)==0)
                                        {
                                        <input class="form-check-input" type="checkbox" name="chk1" value="true" id="gridCheck1">

                                        }
                                        else
                                        {
                                        <input class="form-check-input" type="checkbox" name="chk1" value="true" id="gridCheck1" checked>
                                        }
                                        }
                                        <label class="form-check-label" for="gridCheck1"> آیا زیر مجموعه اول شود؟ </label>
                                        </div>
                                        </div>
                                        <div id="div" class="form-group col-md-4" style="display: none">
                                        <label for="inputState"> مجموعه</label>
                                        <select id="inputState" asp-for="ParentId" asp-items="@(ViewBag.select1 as SelectList)" class="form-control">
                                        </select>
                                        <div class="form-group row">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-9">
                                        <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="chk2" value="true" id="gridCheck2">
