<script>
    let showslideindex=1;
    showslide(showslideindex);
    function plusslide(n) {
        showslide(showslideindex+=n);
    }
    function showcurect(n) {
        showslide(showslideindex=n);
    }
    function showslide(n) {
    let i;  
    let slides = document.getElementsByClassName("slider");
    let dot = document.getElementsByClassName("dot");
    if (n>slides.length) {showslideindex=1 }
    if (n<1) {showslideindex=slides.length }
    for (let i = 0; i < slides.length; i++) {
        slides[i].style.display="none";      
    } 
    for (let i = 0; i < dot.length; i++) {
        dot[i].className = dot[i].className.replace(" active", "");
    } 
    slides[showslideindex-1].style.display="block";   
    dot[showslideindex-1].className+=" active";   
    }
</script>


